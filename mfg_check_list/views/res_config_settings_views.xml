<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
            <field name="arch" type="xml">
               <xpath expr="//div[@id='workorder_settings']" position="after">
                                <div class="o_setting_left_pane">
                                    <field name="module_mrp_wo_checklist"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_mrp_wo_checklist"/>
                                </div>
                            
                 </xpath>
            </field>
        </record>
    </data>
</odoo>
